public Id classFromCourse(String courseName) {
    // code here
    List<apxio__Course__c> crs = [Select name, ID  From  apxio__Course__c Where name := courseName ];
    if (courseName== null ){
        return null; 
    }else {
        apxio__Class__c cls = new apxio__Class__c.apxio__Course__c (apxio__Course__c =courseName);
        List<apxio__Course__c> clsses = [Select  ID, name  From  apxio__Class__c Where name := courseName ];
        return clsses.Id;
    }

}