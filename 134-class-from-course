public Id classFromCourse(String courseName) {
    // code here
    List<apxio__Course__c> crs = [Select Name, ID  From  apxio__Course__c Where Name := courseName ];
    if (courseName== null ){
        return null; 
    }else {
        apxio__Class__c cls = new apxio__Class__c.apxio__Course__c (apxio__Course__c =crs.ID);
        insert cls; 
        //List<apxio__Class__c> clsses = [Select  ID, name  From  apxio__Class__c Where name := courseName ];
        
        return cls.Id;
    }

}