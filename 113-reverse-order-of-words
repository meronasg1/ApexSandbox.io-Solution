public String reverseWordsInASentence(String sentence){
    //your flawless code here
      try{

        String nameRev = (sentence.reverse());

        List<String> StringName = nameRev.split(' ');

        String returnString = '';

        for(String str : StringName){

            returnString = returnString + str.reverse() +' ' ;

        }

        return returnString.trim();

    }

    catch(NullPointerException exp){

        return null;

    }



}