public void createCourseAndClass(String name, String description) {
    // code here
    apxio__Course__c crs = new apxio__Course__c (Name = name, apxio__Course_Details__c = description); 
    insert crs;

    apxio__Class__c cls = new apxio__Class__c(apxio__Course__c = crs.ID, Name = name, apxio__Description__c = String.left(description ));
    insert cls; 

}