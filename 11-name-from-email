public String nameFromEmail(String email) {
    //code here
    String fullName = email.substringBefore('@');
    String firstName = fullName.substringBefore('.');
    firstName = String.toLowerCase(firstName);
    firstName= String.capitalize(firstName);
    String lastName =String.substringAfter(fullName,'.');
    lastName = String.toLowerCase(lastName);
    lastName= String.capitalize(lastName);
    return fullName= firstName+ ' '+lastName;

}